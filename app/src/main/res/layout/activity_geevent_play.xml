<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_geevent_play"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="android.com.galatube.GEEventPlayActivity">
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
       <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Video_info"
        android:orientation="vertical"
        android:layout_height="60dp">
           <ImageView
               android:layout_width="18dp"
               android:layout_height="18dp"
              android:layout_marginTop="10dp"
               android:layout_marginRight="15dp"
               android:src="@drawable/down"
               android:id="@+id/downitem"
               android:layout_gravity="end"/>

       </LinearLayout>
     <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_below="@+id/Video_info"
       android:id="@+id/uper_view"
       android:background="#c8c8c9"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/Video_info1"
                android:layout_below="@id/uper_view"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="90dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/like_iv"
                        android:src="@drawable/like"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="5k"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/like_iv"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/dislike_iv"
                        android:src="@drawable/dislike"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="4k"
                        android:textSize="14sp"
                        android:layout_below="@id/dislike_iv"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/share"
                        android:src="@drawable/share"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="Share"
                        android:textSize="14sp"
                        android:layout_below="@id/share"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/save"
                        android:src="@drawable/save"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="Save"
                        android:textSize="14sp"
                        android:layout_below="@id/save"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/Video_info1"
                android:background="#c8c8c9"
                android:id="@+id/view"
                android:layout_height="1dp">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/view"
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/display">

            </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/AllEvent">
    </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
